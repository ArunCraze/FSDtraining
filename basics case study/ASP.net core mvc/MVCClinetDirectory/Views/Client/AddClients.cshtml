@model MVCClientDirectory.Models.ClientInfo

@{
    ViewData["Title"] = "Add Clients";
    var categories = ViewBag.CategoryOptions as List<string>;
    var standards = ViewBag.StandardOptions as List<string>;
}

<h2 class="text-success mb-4 text-center">Add Client Info</h2>

<form asp-action="AddClients" method="post" class="px-4">
    <div class="mb-3">
        <label asp-for="CompanyName" class="form-label">Company</label>
        <input asp-for="CompanyName" class="form-control border-success" />
    </div>

    <div class="mb-3">
        <label asp-for="WebURL" class="form-label">Website</label>
        <input asp-for="WebURL" class="form-control border-success" />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control border-success" />
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <select asp-for="Category" class="form-select border-success">
            <option value="">-- Select --</option>
            @foreach (var category in categories)
            {
                <option value="@category">@category.Replace("_", " ")</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Standard" class="form-label">Standard</label>
        <select asp-for="Standard" class="form-select border-success">
            <option value="">-- Select --</option>
            @foreach (var standard in standards)
            {
                <option value="@standard">@standard</option>
            }
        </select>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="ShowAllClientsDetails" class="btn btn-outline-secondary">Cancel</a>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>
